<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- help : http://logback.qos.ch/manual/appenders.html -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{ISO8601} %-5level [%.16thread] %logger{36}.%method: %m%n</pattern>
            <immediateFlush>true</immediateFlush>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- redis appender -->
    <appender name="redis" class="com.github.debop4s.redis.logback.RedisAppender">
        <serverName>localhost</serverName>
        <host>localhost</host>
        <port>6379</port>
        <key>logback:logs</key>
    </appender>

    <!--redis appender -->
    <appender name="redis-publisher" class="com.github.debop4s.redis.logback.pubsub.RedisLogPublisher">
        <serverName>localhost</serverName>
        <host>127.0.0.1</host>
        <port>6379</port>
        <channel>channel:logback:logs</channel>
    </appender>

    <logger name="com.github.debop4s.redis" level="TRACE"/>

    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>

    <root level="INFO">
    <appender-ref ref="console"/>
        <!--<appender-ref ref="redis"/>-->
        <!--<appender-ref ref="redis-publisher"/>-->
    </root>
</configuration>